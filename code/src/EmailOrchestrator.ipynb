# Define email categories, entities and intents.
EMAIL_CATEGORIES = [
    "Account Inquiry",
    "Transaction Dispute",
    "Loan Application",
    "Mortgage Inquiry",
    "Fraud Report",
    "Service Request",
    "Complaint",
    "Feedback",
    "General Inquiry",
]
EMAIL_ENTITIES = [
    "Account Number",
    "Transaction ID",
    "Customer Name",
    "Phone Number",
    "Email Address",
    "Date",
    "Amount",
    "Product Type",
]
EMAIL_INTENTS = [
    "Request Information",
